<h1>Send Reminder to Create Account!</h1>


<%= form_for @message, url: admin_email_path do |f| %>
    <fieldset>
      <%= f.hidden_field :name, :value => '10000 Lakes Gaming (Registration)' %>
      <%= f.hidden_field :email, :value => "#{ENV['GMAIL_SMTP_USERNAME']}" %>

      <div class="field">
        <%= f.label :email_list, "List of email recipients:" %> <br>
        <%= f.text_area :email_list, placeholder: "emails", size: "70X15" %>
      </div>
       <br/>
      <div class="field">
        <%= f.label :subject, "Subject:" %>
        <%= f.text_field :subject, placeholder: "Message Subject", size: "62"%>
      </div>

      <div class="field" style="padding-top: 1em;">
        <%= f.label :content, "Message to folks:" %><br>
        <%= f.text_area :content, placeholder: "Message", size: "70x10" %>
      </div>
    </fieldset>
    <hr>
    <fieldset>
      <div class="field">
        <%= f.submit "Send Message", :class => 'btn btn-warning' %>
        <%= link_to 'Cancel', welcome_index_path, :class => 'btn btn-success' %>
      </div>
    </fieldset>
<% end %>

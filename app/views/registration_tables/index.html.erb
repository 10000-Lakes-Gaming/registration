<p id="notice"><%= notice %></p>

<h1>Listing Registration Tables</h1>
<table>
  <thead>
  <tr>
    <th>Player</th>
    <th>Table</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registration_tables.each do |registration_table| %>
      <tr>
        <td><%= registration_table.user_event.user.name %></td>
        <td><%= registration_table.table.id %>: <%= registration_table.table.scenario.name %></td>
        <td><%= link_to 'Show', registration_table %></td>
        <td><%= link_to 'Edit', edit_registration_table_path(registration_table) %></td>
        <td><%= link_to 'Destroy', registration_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email address</th>
    <th>OPF number</th>
    <th>Paizo Forum Username</th>
    <th>Opted Out?</th>
    <th>VO?</th>
    <th>Admin</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.formal_name_with_stars %></td>
      <td><%= user.email %></td>
      <td>
        <% unless user.pfs_number.nil? %>
          <div>Org Play # <%= user.pfs_number %></div>
        <% end %>
        <% unless user.dci_number.nil? %>
          <div>DCI# <%= user.dci_number %></div>
        <% end %>
      </td>
      <td><%= user.forum_username %></td>
      <td><%= yes_no(user.opt_out?) %></td>
      <td>
        <% if user.venture_officer? %>
          <span class="glyphicon glyphicon-tower"></span>
        <% end %>
      </td>
      <td>
        <% if user.admin? %>
          <span class="glyphicon glyphicon-user"></span>
        <% end %>
      </td>
      <td>
        <%= link_to 'Show', user, :class => 'btn btn-info' %>
        <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-primary' %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="text-primary"><%= @users.length %> registered users</div>

<br>
<%= link_to 'New User', new_user_path, :class => 'btn btn-warning' %>

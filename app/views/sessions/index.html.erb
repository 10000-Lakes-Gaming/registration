<p id="notice"><%= notice %></p>

<h1>Listing Sessions for <%= @event.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.name %></td>
        <td><%= session.start %></td>
        <td><%= session.end %></td>
        <td><%= link_to 'Show', [@event, @session] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Back to #{@event.name}", event_path(@event) %>
<%= link_to 'New Session', new_event_session_path(@event, @session) %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Event:</strong>
  <%= @session.event.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @session.name %>
</p>

<p>
  <strong>Start:</strong>
  <%= @session.start.to_s(:long) %>
</p>

<p>
  <strong>End:</strong>
  <%= @session.end.to_s(:long) %>
</p>

<h2>Scheduled Tables</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Scenario</th>
    <th>Players</th>
    <th>Game Masters</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @session.tables.each do |table| %>
      <tr>
        <td><%= table.scenario.name %></td>
        <td align="center"><%= @player_sessions.size %> / <%= table.max_players %></td>
        <td align="center"><%= @gm_sessions.size %> / <%= table.gms_needed %></td>
        <td><%= link_to 'Show', [@event, @session, table] %></td>
        <% if admin? %>
            <td><%= link_to 'Edit', edit_event_session_ta ble_path(@event, @session, table) %></td>
            <td><%= link_to 'Destroy', [@event, @session, table], method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>


<% if admin? %>
    <%= link_to 'Add New Table', new_event_session_table_path(@event, @session) %>
    <br>
    <%= link_to 'Edit', edit_event_session_path(@event, @session) %> |
<% end %>
<%= link_to "Back to #{@event.name}", event_path(@event) %>

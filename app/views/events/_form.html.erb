<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :start %><br>
      <%= f.datetime_select :start %>
    </div>
    <div class="field">
      <%= f.label :end %><br>
      <%= f.datetime_select :end %>
    </div>
    <div class="field">
      <%= f.label :prereg_ends , 'Preregistration or Early Bird ends'%><br>
      <%= f.datetime_select :prereg_ends %>
    </div>
    <div class="field">
      <%= f.label :rsvp_close %><br>
      <%= f.datetime_select :rsvp_close %>
    </div>
    <div class="field">
      <%= f.label :location %><br>
      <%= f.text_field :location %>
    </div>
    <div class="field">
      <%= f.label :charity %><br>
      <%= f.check_box :charity %>
    </div>
    <div class="field">
      <%= f.label :prereg_price, 'Preregistration or Early Bird Price' %><br>
      <%= f.number_field :prereg_price %>
    </div>
    <div class="field">
      <%= f.label :onsite_price, 'Onsite (Regular) Price' %><br>
      <%= f.number_field :onsite_price %>
    </div>
    <div class="field">
      <%= f.label :info %><br/>
      <%= f.text_area :info %>
    </div>
    <div class="field">
      <%= f.label :gm_volunteer_link %><br/>
      <%= f.url_field :gm_volunteer_link %>
    </div>
    <div class="field">
      <%= f.label :external_url %><br>
      <%= f.url_field :external_url %>
    </div>
    <div class="field">
      <%= f.label :event_number %><br>
      <%= f.number_field :event_number %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

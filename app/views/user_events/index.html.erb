<p id="notice"><%= notice %></p>

<h1>Registrations for <%= @event.name %></h1>

<table class="table table-stripe">
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Paid</th>
    </tr>
  </thead>

  <tbody>
    <% @user_events.each do |user_event| %>
      <tr>
        <td><%= user_event.user.name %></td>
        <td><%= user_event.event.name %></td>
        <td><%= user_event.paid %></td>
        <td><%= link_to 'Show', [@event, @user_event]  %></td>
        <td><%= link_to 'Edit', edit_event_user_event_path(@event, user_event) %></td>
        <td><%= link_to 'Destroy', [@event,user_event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Back to #{@event.name}", event_path(@event) %>


<html>
<head>
  <title>PFS Registration</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
  <link rel="manifest" href="/manifest.json">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="theme-color" content="#ffffff">
</head>
<body>
<!--- Header info --->
<div class="header-main">
  <div class="social-media">
    <div style="padding: 5px;">
      <%= image_tag("FB-f-Logo__blue_58.png", alt:"SkalCon Facebook") %>
    </div>
    <% if user_signed_in? %>
        <div>Logged in as: <%= current_user.name %> (<%= current_user.email %>)
          <% if current_user.admin? %>[ADMIN]
          <% end %>
        </div>
    <% end %>
  </div>
  <div class="banner">
    <div class="bannerimg">
    <%= image_tag("skalbanner.png", size: "250x100", alt: "SkålCon") %>
    </div>
  </div>
  <div class="divider" />
</div>


<!--- Main Content --->
<div id="main-content" class="container-fluid">
  <div class="col-sm-3 col-md-2 sidebar">
    <%= render partial: "layouts/sidebar" %>
  </div>
  <div class="col-md-10">
    <%= yield %>
  </div>
</div>


<div class="footer-main">
  © 2016 SkalCon
</div>

</body>
</html>

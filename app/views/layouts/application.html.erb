<html>
<head>
  <title>PFS Registration</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', media: 'screen, projection', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'print-application', media: 'print' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
  <link rel="manifest" href="/manifest.json">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="theme-color" content="#ffffff">
</head>
<body>
<!--- Header info --->
<div class="header-main no-print">
  <div class="social-media">
    <a style="padding: 5px;" href="https://www.facebook.com/pfsskalcon/">
      <%= image_tag("FB-f-Logo__blue_58.png", alt: "SkalCon Facebook", height: "40") %>
    </a>
    <a style="padding: 5px; flex-grow: 1;" href="https://twitter.com/SkalConMN">
      <%= image_tag("TwitterLogo_55acee.png", alt: "SkalCon Twitter", height: "40") %>
    </a>
    <div style="padding: 5px; flex-grow: 2"></div>
  </div>
  <div class="banner">
    <div class="bannerimg">
      <%= image_tag("skalbanner.png", size: "250x100", alt: "SkÃ¥lCon") %>
    </div>
  </div>
  <div class="divider">
    <% if user_signed_in? %>
        <div>
          Logged in as: <%= current_user.name %> (<%= current_user.email %>)
          <% if current_user.admin? %>[ADMIN]
          <% end %>
          <% unless current_user.forum_username.nil? %>{<%= current_user.forum_username %>}
          <% end %>
        </div>
    <% else %>
        <div>
          <%= link_to('Login', new_user_session_path) %>
        </div>
    <% end %>
  </div>
  <div class="divider"></div>
</div>

<div class="no-print">
  <% if user_signed_in? %>
      <% if current_user.forum_username.nil? or current_user.forum_username.empty? %>
          <div class="well">
            <div class="text-warning bg-warning">You have not entered your paizo.com forum username into your profile.
              Please add yours by going to <%= link_to 'My Profile', edit_user_path(current_user) %> and adding your
              primary forum username. This can be helpful when trying to get scenarios to GMs, or when troubleshooting
              reporting.<br/>
              Thank you.
            </div>
          </div>
      <% end %>
  <% end %>
</div>
<!--- Main Content --->
<div id="main-content" class="container-fluid">
  <div class="no-print">
    <div class="col-sm-2 col-xs-12 col-md-2 sidebar">
      <%= render partial: "layouts/sidebar" %>
    </div>
  </div>

  <div class="col-sm-10 col-md-10 col-xs-12">
    <div class="no-print">
      <% if user_signed_in? %>
          <% if current_user.forum_username.nil? or current_user.forum_username.empty? %>
              <div class="well">
                <div class="text-warning bg-warning">You have not entered your paizo.com forum username into your
                  profile.<br>
                  Please add yours by going to <%= link_to 'My Profile', edit_user_path(current_user) %> and adding your
                  primary forum username. This can be helpful when trying to get scenarios to GMs, or when
                  troubleshooting reporting.<br>
                  Thank you.
                </div>
              </div>
          <% end %>
      <% end %>
    </div>
    <%= yield %>
  </div>
</div>

<div class="footer-main">
  &copy; 2016-2017 10,000 Lakes Gaming
</div>

</body>
</html>
